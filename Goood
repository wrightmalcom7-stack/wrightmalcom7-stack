  <script>
    const getKeyBtn = document.getElementById('getKeyBtn');
    const mainContent = document.getElementById('main-content');
    const tasksSection = document.getElementById('tasks-section');
    const revealBtn = document.getElementById('reveal');

    let completed = {
      task1: false,
      task2: false,
      task3: false
    };

    getKeyBtn.addEventListener('click', () => {
      mainContent.style.display = 'none';
      tasksSection.style.display = 'block';
      window.scrollTo(0, 0);
    });

    function showMain() {
      tasksSection.style.display = 'none';
      mainContent.style.display = 'block';
      revealBtn.style.display = 'none';
      completed = { task1: false, task2: false, task3: false };
      // Reset buttons
      ['task1', 'task2', 'task3'].forEach(taskId => {
        const task = document.getElementById(taskId);
        task.classList.remove('done');
        const btn = task.querySelector('button');
        btn.disabled = false;
        btn.innerText = "Start Task";
        task.querySelector('h3').innerText = task.querySelector('h3').innerText.replace(' ‚úÖ Unlocked', '');
      });
    }

    function startTimer(taskId, url) {
      window.open(url, '_blank');
      const btn = document.querySelector(`#${taskId} button`);
      btn.disabled = true;
      btn.innerText = "‚è≥ Please wait 30s...";

      setTimeout(() => {
        const task = document.getElementById(taskId);
        task.classList.add('done');
        const h3 = task.querySelector('h3');
        if (!h3.innerText.includes('‚úÖ Unlocked')) {
          h3.innerText += " ‚úÖ Unlocked";
        }
        completed[taskId] = true;
        checkAllDone();
      }, 30000);
    }

    function checkAllDone() {
      if (completed.task1 && completed.task2 && completed.task3) {
        revealBtn.style.display = 'block';
      }
    }
  </script>
